{
  "name": "pr-test-generator",
  "version": "1.0.0",
  "description": "GitHub Action to auto-generate and run tests for Pull Requests using Claude API and Magnitude",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build dist/index.js -o dist --external sharp --external playwright",
    "test": "jest",
    "test:all": "jest",
    "lint": "eslint src/ --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "package": "npm run build"
  },
  "keywords": [
    "github-action",
    "pull-request",
    "testing",
    "automation",
    "claude",
    "magnitude",
    "e2e-testing"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/rest": "^20.0.2",
    "dotenv": "^17.2.0",
    "magnitude-core": "^0.2.25",
    "playwright": "^1.54.1",
    "zod": "3.24"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}